{
	"name": "chillerlan/phpunit-http",
	"description": "Add PSR-17 factories and a PSR-18 client to your tests",
	"license": "MIT",
	"type": "library",
	"keywords": ["phpunit", "http", "factories", "psr-17", "psr-18"],
	"authors": [
		{
			"name": "smiley",
			"email": "smiley@chillerlan.net",
			"homepage": "https://github.com/codemasher"
		},
		{
			"name": "Contributors",
			"homepage":"https://github.com/chillerlan/phpunit-http/graphs/contributors"
		}
	],
	"homepage": "https://github.com/chillerlan/phpunit-http",
	"support": {
		"issues": "https://github.com/chillerlan/phpunit-http/issues",
		"source": "https://github.com/chillerlan/phpunit-http"
	},
	"minimum-stability": "stable",
	"prefer-stable": true,
	"require": {
		"php": "^8.1"
	},
	"require-dev": {
		"chillerlan/php-httpinterface": "^6.0",
		"guzzlehttp/guzzle": "^7.9",
		"phpstan/phpstan": "^1.11",
		"phpstan/phpstan-deprecation-rules": "^1.2",
		"phpunit/phpunit": "^10.5",
		"slevomat/coding-standard": "^8.15",
		"squizlabs/php_codesniffer": "^3.10"
	},
	"suggest": {
	},
	"autoload": {
		"psr-4": {
			"chillerlan\\PHPUnitHttp\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"chillerlan\\PHPUnitHttpTest\\": "tests"
		}
	},
	"scripts": {
		"phpcs": "@php vendor/bin/phpcs",
		"phpstan": "@php vendor/bin/phpstan",
		"phpstan-baseline": "@php vendor/bin/phpstan --generate-baseline",
		"phpunit": "@php vendor/bin/phpunit"
	},
	"config": {
		"lock": false,
		"sort-packages": true,
		"platform-check": true,
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
